{
  "name": "server",
  "description": "A server of some kind...",
  "default_attributes": {
    "apt" : {
      "unattended_upgrades" : {
        "enable" : true,
        "allowed_origins" : [
          "${distro_id} stable",
          "${distro_id} ${distro_codename}-security"
        ],
        "automatic_reboot" : true
      }
    },
    "authorization": {
      "sudo": {
        "groups": ["sysadmin"],
        "users": ["deploy"],
        "passwordless": true
      }
    },
    "monit": {
      "notify_emails" : ["user@example.com"],
      "enable_emails" : false,
      "mailserver" : {
        "host" : "your-server",
        "port" : "587",
        "username" : "yourusername",
        "password" : "yourpassword",
        "hostname" : "yourhostname"
      },
      "web_interface" : {
        // access credentials for the web interface. Just
        // enabling this won't set up the web interface,
        // it will need either a vhost in nginx or its port
        // being allowed through ufw
        "allow" : ["yourusername","yourpassword"]
      }
    },
    "monit_address" : "monit.devops.local",
    "openssh" : {
      "server" : {
        "password_authentication" : "no",
        "challenge_response_authentication" : "no",
        "permit_empty_passwords" : "no",
        "use_pam" : "no",
        "x11_forwarding" : "no",
        "permit_root_login" : "yes"
      }
    }
  },
  "json_class": "Chef::Role",
  "run_list": [
    "recipe[apt::default]",
    "recipe[users::sysadmins]",
    "recipe[firewall::default]",
    "recipe[ufw::default]",
    "recipe[apt::unattended-upgrades]",
    "recipe[ntp::default]",
    "recipe[sudo::default]",
    "recipe[locale::default]",
    "recipe[fail2ban::default]",
    "recipe[monit-tlq::default]",
    "recipe[monit_configs-tlq::system]"
  ],
  "chef_type": "role",
  "override_attributes": {
  }
}

